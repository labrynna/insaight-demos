<svg xmlns="http://www.w3.org/2000/svg" width="800" height="600" viewBox="0 0 800 600">
  <!-- Background gradient -->
  <defs>
    <linearGradient id="bgGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#4A90E2;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#357ABD;stop-opacity:1" />
    </linearGradient>
    <linearGradient id="mapGradient" x1="0%" y1="0%" x2="100%" y2="0%">
      <stop offset="0%" style="stop-color:#81C784;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#66BB6A;stop-opacity:1" />
    </linearGradient>
  </defs>
  
  <!-- Background -->
  <rect width="800" height="600" fill="url(#bgGradient)"/>
  
  <!-- Map illustration -->
  <g transform="translate(150, 100)">
    <!-- Map base -->
    <rect x="0" y="0" width="500" height="400" rx="10" fill="white" opacity="0.95"/>
    
    <!-- Map grid lines -->
    <line x1="50" y1="50" x2="450" y2="50" stroke="#E0E0E0" stroke-width="1"/>
    <line x1="50" y1="150" x2="450" y2="150" stroke="#E0E0E0" stroke-width="1"/>
    <line x1="50" y1="250" x2="450" y2="250" stroke="#E0E0E0" stroke-width="1"/>
    <line x1="50" y1="350" x2="450" y2="350" stroke="#E0E0E0" stroke-width="1"/>
    
    <line x1="150" y1="50" x2="150" y2="350" stroke="#E0E0E0" stroke-width="1"/>
    <line x1="250" y1="50" x2="250" y2="350" stroke="#E0E0E0" stroke-width="1"/>
    <line x1="350" y1="50" x2="350" y2="350" stroke="#E0E0E0" stroke-width="1"/>
    
    <!-- Location markers -->
    <g>
      <!-- Marker 1 -->
      <circle cx="180" cy="120" r="12" fill="#E53935"/>
      <circle cx="180" cy="120" r="8" fill="white" opacity="0.8"/>
      
      <!-- Marker 2 -->
      <circle cx="300" cy="180" r="12" fill="#E53935"/>
      <circle cx="300" cy="180" r="8" fill="white" opacity="0.8"/>
      
      <!-- Marker 3 -->
      <circle cx="380" cy="140" r="12" fill="#E53935"/>
      <circle cx="380" cy="140" r="8" fill="white" opacity="0.8"/>
      
      <!-- Marker 4 -->
      <circle cx="220" cy="280" r="12" fill="#E53935"/>
      <circle cx="220" cy="280" r="8" fill="white" opacity="0.8"/>
      
      <!-- Marker 5 -->
      <circle cx="400" cy="300" r="12" fill="#E53935"/>
      <circle cx="400" cy="300" r="8" fill="white" opacity="0.8"/>
    </g>
    
    <!-- Filter/control panel -->
    <rect x="20" y="20" width="120" height="30" rx="5" fill="url(#mapGradient)"/>
    <text x="80" y="40" font-family="Arial, sans-serif" font-size="14" fill="white" text-anchor="middle" font-weight="bold">FILTERS</text>
  </g>
  
  <!-- Title -->
  <text x="400" y="70" font-family="Arial, sans-serif" font-size="36" fill="white" text-anchor="middle" font-weight="bold">Site Map</text>
  <text x="400" y="540" font-family="Arial, sans-serif" font-size="20" fill="white" text-anchor="middle" opacity="0.9">Interactive Project Location Viewer</text>
</svg>
